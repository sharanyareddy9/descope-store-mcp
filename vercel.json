{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/sse",
      "dest": "/api/index.js"
    },
    {
      "src": "/message", 
      "dest": "/api/index.js"
    },
    {
      "src": "/.well-known/oauth-authorization-server",
      "dest": "/api/index.js"
    },
    {
      "src": "/authorize",
      "dest": "/api/index.js"
    },
    {
      "src": "/register",
      "dest": "/api/index.js"
    },
    {
      "src": "/health",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  }
}